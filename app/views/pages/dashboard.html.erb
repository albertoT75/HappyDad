<div class="container">

  <div class="container dashboard-section" id="all-kindergardens" style="margin-bottom: 30px;">
    <div class="section-title" style=" color: #f57170;">
      <h4>My Games</h4>
    </div>
    <table style="width: 100%;">
      <thead>
        <tr>

          <th class="table-dashboard" style="padding: 8px;">Child</th>
          <th class="table-dashboard" style="padding: 8px;">Areas</th>
          <th class="table-dashboard" style="padding: 8px;">Mon</th>
          <th class="table-dashboard" style="padding: 8px;">Tue</th>
          <th class="table-dashboard" style="padding: 8px;">Wed</th>
          <th class="table-dashboard" style="padding: 8px;">Thu</th>
          <th class="table-dashboard" style="padding: 8px;">Fri</th>
          <th class="table-dashboard" style="padding: 8px;">Sat</th>
          <th class="table-dashboard" style="padding: 8px;">Sun</th>
          <th class="table-dashboard" style="padding: 8px; color:black">Stars <i class="fas fa-star fa-lg" style="color:yellow;"></i></th>




        </tr>
      </thead>
      <tbody class="dashboard-table">
        <% @kids.each do |kid| %>
          <% if kid.reservations.exists? %>
            <tr>
              <td class="table-dashboard">
                <%= kid.first_name  %>
              </td>
              <td class="table-dashboard">
                <% kid.reservations.each do |reservation| %>
                  <div class="table-item">
                    <%= reservation.game.name %>
                  </div>
                <% end %>
              </td>


              <td class="table-dashboard">
                <% kid.reservations.each do |reservation| %>
                  <div class="table-item">

                    <%= reservation.days.monday.stars %>
                    <%= link_to "Add Stars", game_path(reservation.game), class: "btn btn-addstar" %>
                 </div>
                <% end %>
              </td>


              <td class="table-dashboard">
                <% kid.reservations.each do |reservation| %>
                  <div class="table-item">

                    <%= link_to "Add Stars", game_path(reservation.game), class: "btn btn-addstar" %>
                  </div>
                <% end %>
              </td>

              <td class="table-dashboard">
                <% kid.reservations.each do |reservation| %>
                  <div class="table-item">

                    <%= link_to "Add Stars", game_path(reservation.game), class: "btn btn-addstar" %>
                  </div>
                <% end %>
              </td>

              <td class="table-dashboard">
                <% kid.reservations.each do |reservation| %>
                  <div class="table-item">

                    <%= link_to "Add Stars", game_path(reservation.game), class: "btn btn-addstar" %>
                   </div>
                <% end %>
              </td>

              <td class="table-dashboard">
                <% kid.reservations.each do |reservation| %>
                  <div class="table-item">

                    <%= link_to "Add Stars", game_path(reservation.game), class: "btn btn-addstar" %>
                  </div>
                <% end %>
              </td>

              <td class="table-dashboard">
                <% kid.reservations.each do |reservation| %>
                  <div class="table-item">

                    <%= link_to "Add Stars", game_path(reservation.game), class: "btn btn-addstar" %>
                   </div>
                <% end %>
              </td>

              <td class="table-dashboard">
                <% kid.reservations.each do |reservation| %>
                  <div class="table-item">

                    <%= link_to "Add Stars", game_path(reservation.game), class: "btn btn-addstar" %>
                   </div>
                <% end %>
              </td>

              <td class="table-dashboard">
                <% kid.reservations.each do |reservation| %>

                  <div class="table-item">
                    You have
                    <% if reservation.stars? %>
                        <strong> <%= reservation.stars %> </strong>
                    <% else %>
                      0
                    <% end %>
                    Stars
                  </div>
                <% end %>
              </td>


              <!-- <td class="table-dashboard">
                <% kid.reservations.each do |reservation| %>
                  <div class="table-item">
                    <% if reservation.green_stars == 25 %>
                        <% current_user.rewards.each do |reward| %>
                          <%= link_to edit_reward_path(reward) do %>
                            <%= reward.name %>
                          <% end %>
                        <% end %>
                    <% end %>
                  <% end %>
              </td> -->
                        <!-- link_to "Spin the Wheel!", "pages/wheel" -->



            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="container dashboard-section" id="my-kids">
    <div class="section-title" style=" margin-top: 15px; color: #f57170;">
      <h4>My Kids</h4>
    </div>
    <div class="row kid-сards">
      <% current_user.kids.each do |kid| %>
        <div class="col-3 kid-card">
          <%= link_to edit_kid_path(kid) do %>
            <span><%= kid.first_name %></span>
          <% end %>
        </div>
      <% end %>

      <div class="col-3 kid-card kid-card-add">
        <%= link_to new_kid_path(current_user) do %>
          <span>Add kid <i class="far fa-plus-square"></i></span>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container dashboard-section" id="my-kids">
    <div class="section-title" style=" margin-top: 15px; color: #f57170;">
      <h4>My Rewards</h4>
    </div>
    <div class="row kid-сards">
      <% current_user.rewards.each do |reward| %>
        <div class="col-3 kid-card">
          <%= link_to edit_reward_path(reward) do %>
            <span><%= reward.name %></span>
          <% end %>
        </div>
      <% end %>

      <div class="col-3 kid-card kid-card-add">
        <%= link_to new_reward_path(current_user) do %>
          <span>Add reward <i class="far fa-plus-square"></i></span>
        <% end %>
      </div>
    </div>
  </div>




  </div>
</div>
